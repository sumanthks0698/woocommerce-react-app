{
  "name": "woocommerce-product-segmenter",
  "version": "1.0.0",
  "description": "Full-stack application for WooCommerce product segmentation",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start": "node server.js",
    "setup": "npm install && cd frontend && npm install && cd ..",
    "dev:backend": "node server.js",
    "dev:frontend": "cd frontend && npm start",
    "test:api": "curl http://localhost:3001/api/health",
    "test:connections": "node scripts/test-connection.js",
    "setup:local": "chmod +x scripts/setup-local.sh && ./scripts/setup-local.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "keywords": ["woocommerce", "ecommerce", "segmentation", "microservices"],
  "author": "AI Assistant",
  "license": "MIT"
}
